{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<style>
  .about-text {
  background-color: rgb(0,0,0); /* Fallback color */
  background-color: rgba(0, 0, 0, 0.514); /* Black w/opacity/see-through */
  height:35vh;
  color: white;
  border: 4px solid #f1f1f1;
  border-radius:3px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
  width: 30vw;
  padding: 20px;
  text-align: center;
  font-family: 'Ubuntu Condensed', sans-serif;
  font-size: 1.2em;
  overflow:auto;
}

.return {
    margin-top: -75vh;
    z-index:1;
    position:absolute;
}
.dead{
  background-image: url('../img/dead.jpg');
  background-repeat:no-repeat;
  background-attachment: fixed;
  background-position:center;
  bottom:0;
  height:90vh;
  position:relative;
}
</style>

<div class="dead"></div>
    <div class="return">
        <button class="btn btn-lg btn-danger " type="return"><a href="{{ path('page') }}" style="color:white">
                Retour à l'acceuil
                </a>
        </button>
    </div>

<form method="post">
    {# {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %} #}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}


    <div class="about-text">
        <h1 class="h3 mb-3 font-weight-normal red">Accès Admin</h1>
        <label for="inputEmail">Email</label>
        <input type="email"  name="email" id="inputEmail" class="form-control" required autofocus>
        <label for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        <button class="btn btn-lg btn-dark" type="submit">
            Connexion
        </button>
    </div>
</form>


{% endblock %}
