{% extends 'base.html.twig' %}


{% block body %}
<style>
.bg-image-contact{
  background-size:cover;
  background-image: url('../img/bali.jpg');
  background-repeat:no-repeat;
  background-attachment: fixed;
  filter:blur(2px);
  -webkit-filter: blur(2px);
  bottom:0;
  height:100vh;
  position:relative;
}

  .bg-text { 
  background-color: rgba(255, 255, 255, 0.514);
  height:68vh;
  color: black;
  border: 4px solid #000000;
  border-radius:3px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
  width: 80%;
  padding: 20px;
  text-align: center;
  font-family: 'Patrick Hand', cursive ;
  font-size: 1.4em;
  overflow:auto;
}
</style>

<div class="bg-image-contact">
</div>

<div class="bg-text">
  {# {{ form(form) }} #}

<section class="mb-5">
    <h2 class="h1-responsive font-weight-bold text-center my-4">Contactez-moi! </h2>
    <p class="text-center w-responsive mx-auto mb-5">Avez-vous une question? Une mission? N'hésitez pas à me contacter ! Je ferais de mon mieux pour vous répondre au plus vite. </p>

    <div class="row">
        <div class="col-md-9 mb-md-0 mb-5">
            <form id="contact-form" name="contact-form" action="mail.php" method="POST">
                <div class="row">
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="text" id="name" placeholder="Votre nom" name="name" class="form-control">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="text" id="email" placeholder="Votre e-mail / numéros de téléphone" name="email" class="form-control">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <input type="text" id="subject" placeholder="Sujet" name="subject" class="form-control">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form">
                            <textarea type="text" placeholder="Message" id="message" name="message" rows="2" class="form-control md-textarea"></textarea>
                        </div>
                    </div>
                </div>
            </form>

            <div class="text-center text-md-left">
                <a class="btn btn-dark" onclick="document.getElementById('contact-form').submit();">Envoyer</a>
            </div>
            <div class="status"></div>
        </div>

        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
                <li><i class="fas fa-map-marker-alt fa-2x"></i>
                    <p>37 rue Lamarck, 75018 Paris</p>
                </li>

                <li><i class="fas fa-phone mt-4 fa-2x"></i>
                    <p>06 19 13 24 00</p>
                </li>

                <li><i class="fas fa-envelope mt-4 fa-2x"></i>
                    <p>lelarhaz@gmail.com</p>
                </li>
            </ul>
        </div>
    </div>
</section>  
</div>
{% endblock %}


